@model dynamic

@{
	ViewData["Title"] = "Index";
} 

<h1>Index</h1>

<p>
	<a asp-action="Create">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>ID</th>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Birth Date</th>
			<th>Gender</th>
			<th>User Name</th>
			<th>Role</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var user in Model.Users)
		{
			<tr>
				<td>@user.ID</td>
				<td>@user.FirstName</td>
				<td>@user.LastName</td>
				<td>@user.BirthDate.ToString("yyyy/MM/dd")</td>
				<td>@user.Gender</td>
				<td>@user.UserName</td>
				<td>@user.UserRole</td>
				<td>
					<a asp-action="Edit" asp-route-id="@user.ID">Edit</a> |
					<a asp-action="Details" asp-route-id="@user.ID">Details</a> |
					<a asp-action="Delete" asp-route-id="@user.ID">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>

