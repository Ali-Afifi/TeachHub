@model dynamic

@{
    ViewData["Title"] = "Delete";
}

@{
    var genderStr = Model.User.Gender ? "Male" : "Female";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            ID
        </dt>
        <dd class = "col-sm-10">
            @Model.User.Id
        </dd>
        <dt class = "col-sm-2">
            Role
        </dt>
        <dd class = "col-sm-10">
            @Model.Role.Role1
        </dd>
        <dt class = "col-sm-2">
            First Name
        </dt>
        <dd class = "col-sm-10">
            @Model.User.FirstName
        </dd>
        <dt class = "col-sm-2">
            Last Name
        </dt>
        <dd class = "col-sm-10">
            @Model.User.LastName
        </dd>
        <dt class = "col-sm-2">
            Birth Date
        </dt>
        <dd class = "col-sm-10">
            @Model.User.BirthDate.ToString("yyyy/MM/dd")
        </dd>
        <dt class = "col-sm-2">
            Gender
        </dt>
        <dd class = "col-sm-10">
            @genderStr
        </dd>
        <dt class = "col-sm-2">
            User Name
        </dt>
        <dd class = "col-sm-10">
            @Model.User.UserName
        </dd>
        <dt class = "col-sm-2">
            Password Hash
        </dt>
        <dd class = "col-sm-10">
            @Model.User.PasswordHash
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-action="Users/Delete/@Model.User.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
