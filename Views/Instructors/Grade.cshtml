@model dynamic

@inject IHttpContextAccessor httpContextaccessor


@{
    ViewData["Title"] = "Grade";
}

@{
    var genderStr = Model.Student.Gender ? "Male" : "Female";
}

<h1>Grade Details</h1>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            ID
        </dt>
        <dd class = "col-sm-10">
            @Model.Student.Id
        </dd>
        <dt class = "col-sm-2">
            First Name
        </dt>
        <dd class = "col-sm-10">
            @Model.Student.FirstName
        </dd>
        <dt class = "col-sm-2">
            Last Name
        </dt>
        <dd class = "col-sm-10">
            @Model.Student.LastName
        </dd>
        <dt class = "col-sm-2">
            Birth Date
        </dt>
        <dd class = "col-sm-10">
            @Model.Student.BirthDate.ToString("yyyy/MM/dd")
        </dd>
        <dt class = "col-sm-2">
            Gender
        </dt>
        <dd class = "col-sm-10">
            @genderStr
        </dd>
        <dt class = "col-sm-2">
            User Name
        </dt>
        <dd class = "col-sm-10">
            @Model.Student.UserName
        </dd>
       
    </dl>
</div>
<h3>Courses</h3>
	<div class="overflow-scroll h-25">
		<table class="table">
			<thead>
				<tr>
					<th>Course ID</th>
					<th>Course Name</th>
					<th>Description</th>
					<th>Start Date</th>
					<th>End Date</th>
					<th>Grade</th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				
					<tr>
						<td>@Model.Course.Id</td>
						<td>@Model.Course.CourseName</td>
						<td>@Model.Course.Description</td>
						<td>@Model.Course.StartDate.ToString("yyyy/MM/dd")</td>
						<td>@Model.Course.EndDate.ToString("yyyy/MM/dd")</td>
                        @if(Model.Grade == null) {
                            <td>TBD</td>

                        } else {
                            <td>@Model.Grade</td>
                        }
                       
					</tr>
				
			</tbody>
		</table>
	</div> 
    
<div>
    @{
        var ID = "";
        var flag = true;

        try {
            var userRole = httpContextaccessor.HttpContext.Items["userRole"].ToString();
            if (userRole.Equals("Instructor")) {
                ID = httpContextaccessor.HttpContext.Items["userId"].ToString();
            } 


        } catch {
            flag = false;
        }
    }


    @if(!flag) {
        <a asp-action="Index">Back to List</a>

    } else {
        <a asp-action="Details" asp-route-id="@ID">Back to List</a>
    } 

</div>
